{
    "manifest_version": 3,
    "name": "Crypto Twitter Trend Tracker",
    "version": "1.0",
    "description": "Track and analyze trending keywords, phrases, and narratives on Crypto Twitter.",
    "permissions": [
        "storage",
        "alarms"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Crypto Twitter Trend Tracker"
    },
    "icons": {
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'none';"
    }
}
